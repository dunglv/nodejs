extends ../index
block content
	<div class="col-md-6 col-md-offset-3">
		-if(msg!==null && msg.status === 'error' ){
			<div class="alert alert-danger">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> #{msg.message}
			</div>	
		-}
		<form action="" method="POST" role="form">
			<legend>Regain your password:</legend>
			<div class="form-group">
				<label for="">Your username:</label>
				<input type="text" class="form-control" id="" name="username" placeholder="Your username registered...">
			</div>
			<button type="submit" class="btn btn-primary"><i class="fa fa-lock"></i> Retrieve password</button>
		</form>
	</div>